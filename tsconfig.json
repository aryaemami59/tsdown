{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2023"],
    "moduleDetection": "force",
    "rootDir": "${configDir}/",
    "module": "nodenext",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "types": ["node"],
    "allowImportingTsExtensions": true,
    "strict": true,
    "noUnusedLocals": true,
    "declaration": true,
    "noEmit": true,
    "outDir": "${configDir}/dist",
    "stripInternal": true,
    "esModuleInterop": true,
    "isolatedDeclarations": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "exclude": ["**/temp", "**/fixtures", "${configDir}/docs", "**/dist"]
}
